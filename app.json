{
  "expo": {
    "name": "LoS-dev",
    "slug": "los-dev",
    "scheme": "los-dev",
    "platforms": [
      "ios",
      "android",
      "web"
    ],
    "version": "1.0.0",
    "orientation": "default",
    "icon": "./assets/images/Los-icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/images/adaptive-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "UIBackgroundModes": [
          "audio",
          "audio"
        ]
      },
      "bundleIdentifier": "com.stfrigerio.LoS.dev"
    },
    "android": {
      "useNextNotificationsApi": true,
      "enableBackgroundNotification": true,
      "priority": "max",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/Los-icon.png",
        "backgroundColor": "#000000"
      },
      "package": "com.stfrigerio.LoS.dev",
      "permissions": [
        "INTERNET",
        "ACCESS_NETWORK_STATE",
        "ACCESS_WIFI_STATE",
        "CAMERA",
        "VIBRATE",
        "RECEIVE_BOOT_COMPLETED",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ],
      "plugins": [
        [
          "expo-build-properties",
          {
            "android": {
              "usesCleartextTraffic": true
            }
          }
        ]
      ]
    },
    "web": {
      "favicon": "./assets/images/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "1d5962c7-ab8d-499a-b6dc-de735473d83f"
      }
    },
    "plugins": [
      "expo-build-properties",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow $(PRODUCT_NAME) to use your location."
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "extraMavenRepos": [
              "../../node_modules/@notifee/react-native/android/libs"
            ]
          },
          "ios": {}
        }
      ],
      "expo-router",
      "expo-sqlite",
      "expo-notifications",
      "expo-secure-store"
    ],
    "newArchEnabled": true,
    "owner": "stfrigerio"
  }
}
